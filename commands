# copy hardware conf 
cp /etc/nixos/hardware-configuration.nix .

# rebuild system on the first time (without flake installed):
sudo nixos-rebuild switch --flake .#laptop-hyprland --experimental-features 'nix-command flakes'

# rebuild system all other times (with flake installed):
sudo nixos-rebuild switch --flake . 
sudo nixos-rebuild switch --flake .#laptop-hyprland

#install home manager:
nix-channel --add [https://nixos.org/channels/nixos-23.11](https://nixos.org/channels/nixos-23.11) nixpkgs
sudo nix-channel --add https://github.com/nix-community/home-manager/archive/release-23.11.tar.gz home-manager
nix-channel --update
nix-shell '<home-manager>' -A installed

# rebuild home manager by flake
home-manager switch --flake .#laptop-hyprland --impure

# install pnpm vue/typescript module
pnpm add -g @vue/typescript-plugin

# make symlinc to nvim config:
ln -s ~/.dotfiles/home-manager/apps/configs/NvLazy ~/.config/NvLazy

# make hyprland dir
mkdir ~/.config/hypr/
# make symlinc to hyprland config
ln -s /home/yurgo/.dotfiles/home-manager/apps/configs/hyprland.conf /home/yurgo/.config/hypr/hyprland.conf
ln -s /home/yurgo/.dotfiles/home-manager/apps/configs/hyprpaper.conf /home/yurgo/.config/hypr/hyprpaper.conf

# make monitor toggle script executable
chmod u+x ./scripts/hyprland/monitors-toggle

